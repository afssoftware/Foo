@model HomeDetailsViewModel;

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Details";

}

    <div class="row justify-content-center m3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">

                    <div class="card m-3">
                        <div class="card-header">
                            <h1>@Model.Employee.Name</h1>
                        </div>

                        <div class="card-body text-center">
                            <img class="card-img-top" src="~/images/noimage.jfif" />
                            <h5>Employee ID: @Model.Employee.Id</h5>
                            <h5>Email: @Model.Employee.Email</h5>
							<h5>Salary: @Model.Employee.Salary</h5>
                            <h5>Department: @Model.Employee.Department</h5>
                        </div>
                        <div class="card-footer text-center">
                            <a href="#" class="btn btn-primary">View</a>
                            <a href="#" class="btn btn-primary">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}